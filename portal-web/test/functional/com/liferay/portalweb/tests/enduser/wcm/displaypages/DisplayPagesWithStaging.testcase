<definition component-name="portal-wcm">
	<property name="portal.release" value="true" />
	<property name="portal.upstream" value="true" />
	<property name="testray.main.component.name" value="Display Pages" />

	<set-up>
		<execute macro="TestCase#setUpPortalInstance" />

		<execute macro="User#firstLoginPG" />

		<execute macro="JSONGroup#addGroup">
			<var name="groupName" value="Test Site Name" />
		</execute>

		<execute macro="Navigator#openWithAppendToBaseURL">
			<var name="urlAppend" value="group/test-site-name/~/control_panel/manage?p_p_id=com_liferay_staging_processes_web_portlet_StagingProcessesPortlet" />
		</execute>

		<execute macro="Staging#activateStagingCP">
			<var name="siteName" value="Test Site Name" />
		</execute>
	</set-up>

	<tear-down>
		<var method="PropsUtil#get('test.portal.instance')" name="testPortalInstance" />
		<if>
			<equals arg1="${testPortalInstance}" arg2="true" />
			<then>
				<execute macro="PortalInstances#tearDownCP" />
			</then>
			<else>
				<execute macro="JSONGroup#deleteGroupByName">
					<var name="groupName" value="Test Site Name" />
				</execute>
			</else>
		</if>
	</tear-down>

	<command name="AssertDisplayPagesAreOnlyEditableInStagingView" priority="5">
		<execute macro="Navigator#openWithAppendToBaseURL">
			<var name="urlAppend" value="group/test-site-name-staging/~/control_panel/manage?p_p_id=com_liferay_layout_admin_web_portlet_GroupPagesPortlet" />
		</execute>

		<execute function="AssertVisible" locator1="NavBar#NAV_ITEM_LINK">
			<var name="key_navItem" value="Display Pages" />
		</execute>

		<execute macro="Navigator#openWithAppendToBaseURL">
			<var name="urlAppend" value="group/test-site-name/~/control_panel/manage?p_p_id=com_liferay_layout_admin_web_portlet_GroupPagesPortlet" />
		</execute>

		<execute function="AssertElementNotPresent" locator1="NavBar#NAV_ITEM_LINK">
			<var name="key_navItem" value="Display Pages" />
		</execute>
	</command>
</definition>