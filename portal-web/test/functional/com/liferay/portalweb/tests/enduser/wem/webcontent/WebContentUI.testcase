<definition component-name="portal-wcm">
	<property name="portal.release" value="true" />
	<property name="portal.upstream" value="true" />
	<property name="testray.main.component.name" value="Web Content Administration" />

	<set-up>
		<execute macro="TestCase#setUpPortalInstance" />

		<execute macro="User#firstLoginPG" />
	</set-up>

	<tear-down>
		<var method="PropsUtil#get('test.portal.instance')" name="testPortalInstance" />

		<if>
			<equals arg1="${testPortalInstance}" arg2="true" />
			<then>
				<execute macro="PortalInstances#tearDownCP" />
			</then>
			<else>
				<execute macro="WebContent#tearDownCP" />

				<execute macro="WebContentTemplates#tearDownCP" />

				<execute macro="WebContentStructures#tearDownCP" />
			</else>
		</if>
	</tear-down>

	<command name="AddFolder" priority="5">
		<property name="testray.component.names" value="Training,Web Content Administration" />

		<execute macro="Navigator#openURL" />

		<execute macro="ProductMenu#gotoPortlet">
			<var name="category" value="Content" />
			<var name="panel" value="Site Administration" />
			<var name="portlet" value="Web Content" />
		</execute>

		<execute macro="WebContentFolder#addCP">
			<var name="folderDescription" value="WC Folder Description" />
			<var name="folderName" value="WC Folder Name" />
		</execute>
	</command>

	<command name="AddWCWithTranslation" priority="5">
		<property name="portal.acceptance" value="true" />
		<property name="test.name.skip.portal.instance" value="LocalizationWithWebContent#AddWCWithTranslation" />
		<property name="testray.component.names" value="Localization,Web Content Administration" />

		<execute macro="Navigator#openURL" />

		<execute macro="ProductMenu#gotoPortlet">
			<var name="category" value="Content" />
			<var name="panel" value="Site Administration" />
			<var name="portlet" value="Web Content" />
		</execute>

		<execute macro="WebContentNavigator#gotoAddCP" />

		<execute macro="WebContent#addCP">
			<var name="webContentContent" value="WC Content" />
			<var name="webContentTitle" value="WC Title" />
		</execute>

		<execute macro="PortletEntry#changeLocale">
			<var name="fieldName" value="Title" />
			<var name="locale" value="es-ES" />
		</execute>

		<execute macro="WebContent#addCP">
			<var name="webContentContent" value="WC Contenido" />
			<var name="webContentTitle" value="WC Titulo" />
		</execute>

		<execute macro="PortletEntry#publish" />

		<execute macro="Navigator#gotoPage">
			<var name="pageName" value="Test Page Name" />
		</execute>

		<execute macro="Content#addPG">
			<var name="assetTitle" value="WC Title" />
		</execute>

		<execute macro="Portlet#addPG">
			<var name="portletName" value="Language Selector" />
		</execute>

		<execute macro="LanguagePortlet#selectLanguagePG">
			<var name="locale" value="es_ES" />
			<var name="textIcon" value="español-España" />
		</execute>

		<execute macro="WebContent#viewPGViaWCD">
			<var name="webContentContent" value="WC Contenido" />
		</execute>

		<execute macro="WebContentNavigator#gotoEditPGViaWCD">
			<var name="menuItem" value="Editar contenido web" />
			<var name="webContentTitle" value="WC Titulo" />
		</execute>

		<execute macro="PortletEntry#changeLocale">
			<var name="fieldName" value="Título" />
			<var name="locale" value="es-ES" />
		</execute>

		<execute macro="WebContent#viewCP">
			<var name="webContentContent" value="WC Contenido" />
			<var name="webContentTitle" value="WC Titulo" />
		</execute>
	</command>

	<command name="AddWebContent" priority="4">
		<property name="testray.component.names" value="Web Content Administration" />

		<execute macro="Navigator#openURL" />

		<execute macro="ProductMenu#gotoPortlet">
			<var name="category" value="Content" />
			<var name="panel" value="Site Administration" />
			<var name="portlet" value="Web Content" />
		</execute>

		<execute macro="WebContentNavigator#gotoAddCP" />

		<execute macro="WebContent#addCP">
			<var name="webContentContent" value="WC WebContent Content" />
			<var name="webContentTitle" value="WC WebContent Title" />
		</execute>

		<execute macro="PortletEntry#publish" />

		<execute macro="WebContent#viewTitle">
			<var name="webContentTitle" value="WC WebContent Title" />
		</execute>

		<execute macro="WebContentNavigator#gotoEditCP">
			<var name="webContentTitle" value="WC WebContent Title" />
		</execute>

		<execute macro="WebContent#viewCP">
			<var name="webContentContent" value="WC WebContent Content" />
			<var name="webContentTitle" value="WC WebContent Title" />
		</execute>
	</command>

	<command name="AddWebContentMultiple" priority="3">
		<property name="testray.component.names" value="Web Content Administration" />

		<execute macro="Navigator#openURL" />

		<execute macro="ProductMenu#gotoPortlet">
			<var name="category" value="Content" />
			<var name="panel" value="Site Administration" />
			<var name="portlet" value="Web Content" />
		</execute>

		<execute macro="WebContentNavigator#gotoAddCP" />

		<execute macro="WebContent#addCP">
			<var name="webContentContent" value="WC WebContent Content 1" />
			<var name="webContentTitle" value="WC WebContent Title 1" />
		</execute>

		<execute macro="PortletEntry#publish" />

		<execute macro="WebContent#viewTitle">
			<var name="webContentTitle" value="WC WebContent Title 1" />
		</execute>

		<execute macro="Navigator#openURL" />

		<execute macro="ProductMenu#gotoPortlet">
			<var name="category" value="Content" />
			<var name="panel" value="Site Administration" />
			<var name="portlet" value="Web Content" />
		</execute>

		<execute macro="WebContentNavigator#gotoAddCP" />

		<execute macro="WebContent#addCP">
			<var name="webContentContent" value="WC WebContent Content 2" />
			<var name="webContentTitle" value="WC WebContent Title 2" />
		</execute>

		<execute macro="PortletEntry#publish" />

		<execute macro="WebContent#viewTitle">
			<var name="webContentTitle" value="WC WebContent Title 2" />
		</execute>

		<execute macro="Navigator#openURL" />

		<execute macro="ProductMenu#gotoPortlet">
			<var name="category" value="Content" />
			<var name="panel" value="Site Administration" />
			<var name="portlet" value="Web Content" />
		</execute>

		<execute macro="WebContentNavigator#gotoAddCP" />

		<execute macro="WebContent#addCP">
			<var name="webContentContent" value="WC WebContent Content 3" />
			<var name="webContentTitle" value="WC WebContent Title 3" />
		</execute>

		<execute macro="PortletEntry#publish" />

		<execute macro="WebContent#viewTitle">
			<var name="webContentTitle" value="WC WebContent Title 3" />
		</execute>

		<execute macro="Navigator#openURL" />

		<execute macro="ProductMenu#gotoPortlet">
			<var name="category" value="Content" />
			<var name="panel" value="Site Administration" />
			<var name="portlet" value="Web Content" />
		</execute>

		<execute macro="WebContentNavigator#gotoEditCP">
			<var name="webContentTitle" value="WC WebContent Title 1" />
		</execute>

		<execute macro="WebContent#viewCP">
			<var name="webContentContent" value="WC WebContent Content 1" />
			<var name="webContentTitle" value="WC WebContent Title 1" />
		</execute>

		<execute macro="Navigator#openURL" />

		<execute macro="ProductMenu#gotoPortlet">
			<var name="category" value="Content" />
			<var name="panel" value="Site Administration" />
			<var name="portlet" value="Web Content" />
		</execute>

		<execute macro="WebContentNavigator#gotoEditCP">
			<var name="webContentTitle" value="WC WebContent Title 2" />
		</execute>

		<execute macro="WebContent#viewCP">
			<var name="webContentContent" value="WC WebContent Content 2" />
			<var name="webContentTitle" value="WC WebContent Title 2" />
		</execute>

		<execute macro="Navigator#openURL" />

		<execute macro="ProductMenu#gotoPortlet">
			<var name="category" value="Content" />
			<var name="panel" value="Site Administration" />
			<var name="portlet" value="Web Content" />
		</execute>

		<execute macro="WebContentNavigator#gotoEditCP">
			<var name="webContentTitle" value="WC WebContent Title 3" />
		</execute>

		<execute macro="WebContent#viewCP">
			<var name="webContentContent" value="WC WebContent Content 3" />
			<var name="webContentTitle" value="WC WebContent Title 3" />
		</execute>
	</command>
</definition>